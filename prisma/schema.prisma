generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  STUDENT
  INSTRUCTOR
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
  UNDISCLOSED
}

enum LicenseCategory {
  A
  B
  C
}

enum VehicleType {
  MANUAL
  AUTOMATIC
  ELECTRIC
  COMBUSTION
}

enum Transmission {
  MANUAL
  AUTOMATIC
}

enum EngineType {
  COMBUSTION
  ELECTRIC
}

enum LessonStatus {
  REQUESTED
  PENDING_PAYMENT
  PAID
  WAITING_APPROVAL
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  EVALUATED
  PAYOUT_PAID
  CANCELLED
}

enum PayoutStatus {
  PENDING
  PAID
}

enum InstructorStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         UserRole
  name         String?
  phone        String?

  instructor Instructor?

  studentLessons Lesson[] @relation("LessonStudent")
  sentMessages  Message[] @relation("MessageSender")
  studentReviews Review[] @relation("ReviewStudent")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Instructor {
  id                String            @id @default(cuid())
  userId            String            @unique
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  gender            Gender
  licenseCategories LicenseCategory[]
  status            InstructorStatus   @default(PENDING)
  hourlyRate        Float              @default(80.0)
  pixKey            String?
  averageRating     Float?             @default(0.0)
  totalReviews      Int?               @default(0)

  city              String?
  state             String?
  neighborhoodReside String?
  neighborhoodTeach String?

  completedLessonsCount Int            @default(0)
  rating            Float              @default(0.0)

  vehicles Vehicle[]
  lessons  Lesson[]
  reviews  Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id           String     @id @default(cuid())
  instructorId String
  instructor   Instructor @relation(fields: [instructorId], references: [id], onDelete: Cascade)

  type VehicleType

  make  String?
  model String?
  year  Int?
  plate String?
  transmission Transmission @default(MANUAL)
  engineType  EngineType   @default(COMBUSTION)

  lessons Lesson[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([instructorId])
}

model Lesson {
  id String @id @default(cuid())

  studentId String
  student   User   @relation("LessonStudent", fields: [studentId], references: [id], onDelete: Restrict)

  instructorId String
  instructor   Instructor @relation(fields: [instructorId], references: [id], onDelete: Restrict)

  vehicleId String?
  vehicle   Vehicle? @relation(fields: [vehicleId], references: [id], onDelete: SetNull)

  status LessonStatus @default(REQUESTED)

  lessonDate DateTime @db.Date
  lessonTime DateTime @db.Time(0)

  payoutStatus PayoutStatus @default(PENDING)
  receiptUrl   String?

  payment Payment?
  chat    Chat?
  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([studentId])
  @@index([instructorId])
  @@index([vehicleId])
  @@index([status])
  @@index([payoutStatus])
}

enum PaymentStatus {
  PENDING
  PAID
  HELD
  RELEASED
  REFUNDED
}

model Payment {
  id String @id @default(cuid())

  lessonId String @unique
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  status PaymentStatus @default(HELD)

  amount   Decimal @db.Decimal(10, 2)
  currency String  @default("BRL")

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  releasedAt DateTime?
  refundedAt DateTime?

  @@index([status])
}

model Chat {
  id String @id @default(cuid())

  lessonId String @unique
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lessonId])
}

model Message {
  id String @id @default(cuid())

  chatId String
  chat   Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  senderId String
  sender   User @relation("MessageSender", fields: [senderId], references: [id], onDelete: Restrict)

  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([chatId])
  @@index([senderId])
}

model Review {
  id String @id @default(cuid())

  lessonId String
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  studentId String
  student   User   @relation("ReviewStudent", fields: [studentId], references: [id], onDelete: Restrict)

  instructorId String
  instructor   Instructor @relation(fields: [instructorId], references: [id], onDelete: Restrict)

  rating Int @db.SmallInt
  comment String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([lessonId, studentId])
  @@index([lessonId])
  @@index([studentId])
  @@index([instructorId])
  @@index([rating])
}
